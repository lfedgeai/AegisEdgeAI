# CAMARA API Credentials
# Copy this file to .env and fill in your actual credentials
# DO NOT COMMIT .env TO GIT

# CAMARA Basic Auth (required when CAMARA_BYPASS=false)
# Format: Basic <base64(client_id:client_secret)>
# Generate with: echo -n "client_id:client_secret" | base64
CAMARA_BASIC_AUTH="Basic <your_base64_encoded_credentials>"

# CAMARA Bypass Mode (set to "true" to skip CAMARA API calls for testing)
CAMARA_BYPASS="false"

# CAMARA Base URL (optional, defaults to sandbox)
CAMARA_BASE_URL="https://sandbox.opengateway.telefonica.com/apigateway"

# CAMARA Scope (optional, defaults to device-location-read)
CAMARA_SCOPE="dpv:FraudPreventionAndDetection#device-location-read"

# Mobile Sensor Database Path (optional)
MOBILE_SENSOR_DB="sensor_mapping.db"

# CAMARA Encryption Key (for Issue #143 - encrypting auth_req_id storage)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CAMARA_ENCRYPTION_KEY="<your_32_byte_base64_key>"

